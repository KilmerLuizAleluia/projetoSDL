<body class="container"> 
	<nav class="navbar navbar-static-top navbar-dark bg-inverse">
		<a class="navbar-brand" href="#">Estúdio Bilson's</a>
		<ul class="nav navbar-nav">
	        <li class="nav-item active">
	          <%= link_to 'Visualizar sessões', sessions_path %>
	        </li>
	        <li class="nav-item">
	          <%= link_to 'Marcar Sessão', new_session_path %>
	        </li>
	      </ul>
	</nav>

	<div class="jumbotron">
		<div class="container">
			<h2>Sessões marcadas</h2>
				<table class="table table-striped table-bordered table-hover">
					<tr>
						<th>Cliente</th>
						<th>Data da sessão</th>
						<th>Desenho</th>
						<th>Tamanho</th>
						<th>Ações</th>
					</tr>
					<% @sessions.each do |session| %>
					<tr>
					  	<td class="row"><%= session.client %></td>
					  	<td class="row"><%= session.data.strftime("%d/%m/%y: %H:%M:%S") %></td>
					  	<td class="row"><%= session.imagem %></td>
					  	<td class="row"><%= session.tamanho %></td>
					  	<td> <%= link_to("Editar", edit_session_path(session.id)) %></td>
				  	</tr>
					<% end %>
			  	</table>
			  <br/>
		</div>
	</div>
</body>